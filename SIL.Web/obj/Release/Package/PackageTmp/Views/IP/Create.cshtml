@model SIL.Web.ViewModels.IpViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="pull-left">Create</h1>


<div id="leftPane">
	<nav class="subMenu">
	<h3>Actions</h3>
	</nav>
</div>
<div id="rightPane">

@using (Html.BeginForm("Save", "IP")) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Ip</legend>
        <span>
            @Html.Label("IP Address")
            @Html.EditorFor(model => model.IPAddress)
            @Html.ValidationMessageFor(model => model.IPAddress)
        </span>

        <span>
            @Html.LabelFor(model => model.Comments)
            @Html.EditorFor(model => model.Comments)
            @Html.ValidationMessageFor(model => model.Comments)
        </span>

        <span>
            @Html.LabelFor(model => model.SSL)
            @Html.EditorFor(model => model.SSL)
            @Html.ValidationMessageFor(model => model.SSL)
        </span>
        <span>
            @Html.LabelFor(model => model.Location)
            @Html.EditorFor(model => model.Location)
            @Html.ValidationMessageFor(model => model.Location)
        </span>
        
        <span>
            @Html.Label("Servers")
            @Html.DropDownListFor(model => model.ServerId, Model.Servers)
        </span>

        <span>
            <input type="submit" value="Create" class="btn green pull-right"/>
        </span>
    </fieldset>
}

       @Html.ActionLink("Back to List", "Index", null,   new  { @class = "btn red pull-left" })

</div>