@model IEnumerable<SIL.Domain.Website>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Websites</h1>
<div id="leftPane">
	<nav class="subMenu">
		<h3>Menu</h3>
		<ul>
			<li>@Html.ActionLink("Create New", "Create")</li>
		</ul>
		
	</nav>
</div>
<div id="rightPane">
<table id="tables">
        <thead>
    <tr>

        <th>
            @Html.DisplayName("Site Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayName("Database Name")
        </th>
        <th>
            @Html.DisplayName("Version No")
        </th>
        <th>
            @Html.DisplayName("Online")
        </th>
        <th>
            @Html.DisplayName("PSU Owned")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pingdom)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>

   
    @foreach (var item in Model)
    {
        <tr>           
            <td>
                @Html.DisplayFor(modelItem => item.SiteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatabaseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DomainControl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pingdom)
            </td>
            <td>
                @Html.ActionLink("Customer", "CustomerInfo", "Customer", new { id = item.CustomerId }, null) |
                @Html.ActionLink("Edit", "Edit", new { id = item.WebsiteId }) |
                @Html.ActionLink("Details", "Details", new { id = item.WebsiteId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.WebsiteId },null)
            </td>
        </tr>
    }
 </tbody>
</table>
    </div>