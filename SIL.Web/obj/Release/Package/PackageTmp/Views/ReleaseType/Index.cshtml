@model IEnumerable<SIL.Domain.ReleaseType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Release types</h1>

<div id="leftPane">
	<nav class="subMenu">
	<h3>Actions</h3>
		<ul>
			<li>@Html.ActionLink("Create New", "Create")</li>
		</ul>
	</nav>
</div>
<div id="rightPane">
<table id="tables">
	<thead>
		<tr>
			<th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
         <th></th>
    </tr>
	</thead>
	<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReleaseTypeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ReleaseTypeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ReleaseTypeId })
        </td>
    </tr>
}

 </tbody>

</table>
</div>