@model IEnumerable<SIL.Domain.Server>

@{
    ViewBag.Title = "Index";
}

<h1>Servers</h1>

<div id="leftPane">
	<nav class="subMenu">
	<h3>Actions</h3>
		<ul>
			<li>@Html.ActionLink("Create New", "Create")</li>
		</ul>
	</nav>
</div>
<div id="rightPane">
<table id="tables">
	<thead>
		<tr>
        <th>
            @Html.Label("Host Name")
        </th>
        <th>
            @Html.Label("Friendly Name")
        </th>
        <th>
           @Html.Label("IIS Version")
        </th>
        <th>
          @Html.Label("Description")
        </th>
                    <th></th>
		</tr>
	</thead>
	<tbody>


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HostName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FriendlyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IISVersionNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ServerId }) |
            @Html.ActionLink("Details", "Details", new {id=item.ServerId  }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ServerId  })
        </td>
    </tr>
}

	</tbody>

</table>
</div>