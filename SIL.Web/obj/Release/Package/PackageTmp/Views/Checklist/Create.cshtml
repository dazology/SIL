@model SIL.Web.ViewModels.ChecklistViewModel
@using SIL.Web.Helpers

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ChecklistViewModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Question)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Question)
            @Html.ValidationMessageFor(model => model.Question)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionFieldType)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.QuestionFieldOptions, Model.QuestionFieldOptions.ToSelectList(addPleaseSelect: true))
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn red pull-left" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
