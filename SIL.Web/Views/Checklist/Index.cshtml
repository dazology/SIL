@model IEnumerable<SIL.Domain.Checklist>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionFieldType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionFieldType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ChecklistId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ChecklistId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ChecklistId })
        </td>
    </tr>
}

</table>
