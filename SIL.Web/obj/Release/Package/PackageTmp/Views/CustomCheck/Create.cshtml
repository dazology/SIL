@model SIL.Web.ViewModels.CustomCheckViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CustomCheckViewModel</legend>

        <div class="editor-label">
            @Html.Label("Websites")
        </div>
        <div class="editor-field">
           @Html.DropDownListFor(model => model.WebsiteId , Model.Websites,"--Select--")
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OrderNo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrderNo)
            @Html.ValidationMessageFor(model => model.OrderNo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Question)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Question)
            @Html.ValidationMessageFor(model => model.Question)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionFieldType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionFieldType)
            @Html.ValidationMessageFor(model => model.QuestionFieldType)
        </div>

        <p>
            <input type="submit" value="Add" />
        </p>
         <p>
            <input type="submit" value="Cancel" />
        </p>



    </fieldset>
}

<div>
   @Html.ActionLink("Back to List", "Index", null, new { @class = "btn blue pull-left" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
