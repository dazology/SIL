<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Software Information Library</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    <header>
             <nav  id="mainMenu">
                <div class="wrapper">
                    <ul>
                        @if(Request.IsAuthenticated)
                        {
                        <li>@Html.ActionLink("Dashboard", "Index", "Home")</li> 
                        <li>@Html.ActionLink("Customer", "Index", "Customer")</li>  
                        <li>@Html.ActionLink("Contact", "Index", "Contact")</li>                
                        <li>@Html.ActionLink("Server", "Index", "Server")</li>  
                        <li>@Html.ActionLink("Ip", "Index", "IP")</li>  
                        <li>@Html.ActionLink("Website", "Index", "Website")</li>
                      
                        <li>@Html.ActionLink("Release", "Index", "Release")</li>
                        <li>@Html.ActionLink("Release Type", "Index", "ReleaseType")</li>@*
                        <li>@Html.ActionLink("Checklist", "Index", "Checklist")</li>*@
                        <li class="login"> @Html.Partial("_LoginPartial")</li>
                        }
                    </ul>
                </div>      
            </nav>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="wrapper">
            @RenderBody()
        </section>
    </div>
    <footer id="main-footer">
        <div class="wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Software Information Library</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>